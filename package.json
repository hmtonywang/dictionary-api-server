{
  "name": "y-dictionary-server",
  "version": "0.1.0",
  "description": "A service to look up word(s).",
  "author": "hm.tony.wang@gmail.com",
  "main": "app.js",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "better-npm-run start",
    "dev": "better-npm-run dev",
    "test": "better-npm-run test",
    "build": "better-npm-run build",
    "gcloud-build": "better-npm-run gcloud-build"
  },
  "betterScripts": {
    "start": {
      "command": "node app.js",
      "env": {
        "NODE_ENV": "production",
        "TZ": "Asia/Taipei"
      }
    },
    "dev": {
      "command": "node --watch app.js",
      "env": {
        "NODE_ENV": "development",
        "TZ": "Asia/Taipei"
      }
    },
    "test": {
      "command": "",
      "env": {
        "TZ": "Asia/Taipei"
      }
    },
    "build": {
      "command": "docker build -t y-dictionary-server:latest ."
    },
    "gcloud-build": {
      "command": "gcloud builds submit --tag gcr.io/impactful-drive-375211/y-dictionary-server ."
    }
  },
  "dependencies": {
    "@godaddy/terminus": "^4.11.2",
    "axios": "^1.3.2",
    "better-npm-run": "^0.1.1",
    "bunyan": "^1.8.15",
    "cheerio": "^1.0.0-rc.12",
    "compression": "^1.7.4",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "express-validator": "^6.14.3",
    "helmet": "^6.1.4",
    "http-status": "^1.6.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "swagger-jsdoc": "^6.2.8"
  }
}
